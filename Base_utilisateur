CREATE TABLE posts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    utilisateur_id INT NOT NULL,
    type ENUM('evenement','photo','video','texte') NOT NULL,
    fichier VARCHAR(255),
    description TEXT,
    lieu VARCHAR(255),
    date_event DATETIME,
    humeur VARCHAR(100),
    visibilite ENUM('public','reseau','selection') DEFAULT 'public',
    selection_amis TEXT
);
